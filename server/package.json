{
  "name": "climatelens-server",
  "version": "1.0.0",
  "description": "Backend server for ClimateLens",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "init-db": "node initDB.js",
    "check-db": "node checkDB.js",
    "setup-env": "node setup-env.js",
